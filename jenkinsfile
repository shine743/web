pipeline {
    agent any

    environment {
        PATH = '/usr/local/bin:${env.PATH}'
    }
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Check Environment') {
            steps {
                script {
                echo 'Checking system environment variables...'
                sh "echo $PATH"  // $PATH 환경 변수 확인
                sh "git --version" // git 명령어 확인
                sh "which docker"  // docker 명령어 확인
                }
            }
        }
    }
}